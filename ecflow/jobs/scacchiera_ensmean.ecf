%include <sched_heavy.h>
%include <head.h>

scacchiera_ensmean() {

  mkdir -p $POSTPROC_EPS_WORKDIR/scacchiera_ensmean
  cd $POSTPROC_EPS_WORKDIR/scacchiera_ensmean

  $SIMC_TOOLS $WORKDIR_BASE/testeps/nwprun/postproc_eps/scacchiera_ensmean.py \
   -shp $1 -tp tpp01h \
   -in $FXTR_DATADIR \
   -out $POSTPROC_EPS_DATADIR/scacchiera/ensmean/1H/${DATE}

  $SIMC_TOOLS $WORKDIR_BASE/testeps/nwprun/postproc_eps/scacchiera_ensmean.py \
   -shp $1 -tp tpp03h \
   -in $FXTR_DATADIR \
   -out $POSTPROC_EPS_DATADIR/scacchiera/ensmean/3H/${DATE}

}

for reg in $REGLIST; do
    AREE=`conf_getfile macroaree_$reg.grib`
    scacchiera_ensmean $AREE &
done
wait
